# SentinelX Backend Environment Configuration
# Copy this file to .env and fill in the values

# Database
DATABASE_URL=sqlite+aiosqlite:///./sentinelx.db

# JWT Secret (generate a secure random string for production)
SECRET_KEY=your-secure-secret-key-here

# Google OAuth (for User Portal)
# Create credentials at https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/google/callback

# Telegram Bot (for Admin OTP)
# Create a bot with @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your-telegram-bot-token

# Frontend URLs
ADMIN_FRONTEND_URL=http://localhost:8081
USER_FRONTEND_URL=http://localhost:8080
